<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="1dp"
    app:strokeColor="#E8E3E3"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:transitionName="image_main_trans"
            android:id="@+id/img_animal"
            android:padding="5dp"
            android:src="@drawable/bulldog"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:transitionName="name_main_trans"
                android:id="@+id/tv_name_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="Name"
                android:textSize="25sp" />
            <TextView
                android:transitionName="description_animal_trans"
                android:id="@+id/tv_description_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amita"
                android:text="Description" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Origin: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:transitionName="origin_main_trans"
                    android:text="Lon Don"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:id="@+id/tv_origin_animal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:transitionName="sex_main_trans"
                        android:text="Male"
                        android:textStyle="bold"
                        android:id="@+id/tv_sex_animal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:background="@color/black"
                        android:layout_width="1dp"
                        android:layout_height="12dp"/>
                    <TextView
                        android:transitionName="age_main_trans"
                        android:text="1 year"
                        android:layout_marginStart="5dp"
                        android:id="@+id/tv_age_animal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginEnd="20dp"
                        android:transitionName="price_main_trans"
                        android:textColor="#FF5722"
                        android:id="@+id/tv_price_animal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:text="price"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>