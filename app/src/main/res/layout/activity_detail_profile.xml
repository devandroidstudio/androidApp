<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:transitionName="transition_profile"
    tools:context=".Admin.DetailProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_detail_account"
        android:background="@drawable/custom_toolbar"
        android:backgroundTint="@color/purple_200"
        android:fitsSystemWindows="true"
        android:elevation="10dp"
        app:elevation="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:liftOnScroll="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            app:titleCentered="true"
            app:title="Animals"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:id="@+id/toolbar_profile_admin"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_showView_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_profile_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:transitionName="fab_add_product_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:focusableInTouchMode="false"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#E91E63"
        android:baselineAlignBottom="false"
        android:id="@+id/fab_add_profile_admin"
        android:src="@drawable/ic_baseline_add_24"
        app:fabCustomSize="@android:dimen/notification_large_icon_height"
        app:layout_anchor="@id/layout_showView_profile"
        app:layout_anchorGravity="end|bottom|right" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>