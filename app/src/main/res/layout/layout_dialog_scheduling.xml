<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/white"
        android:background="@color/purple_200"
        android:text="Detailed Schedule"
        android:padding="12dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_detail_scheduling_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo"
            android:text="Name"
            android:textSize="15sp" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"
            android:text="Animal Name"
            android:id="@+id/tv_animal_detail_scheduling_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"
            android:text="Type Of Procedure"
            android:id="@+id/tv_type_of_procedure_detailed_scheduling_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"
            android:text="Procedure"
            android:id="@+id/tv_procedure_detail_scheduling_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"
            android:text="Kind"
            android:id="@+id/tv_kind_detail_scheduling_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/baloo"
                android:text="Sex"
                android:id="@+id/tv_sex_detail_scheduling_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:fontFamily="@font/baloo"
                android:text="Age"
                android:id="@+id/tv_age_detail_scheduling_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/aclonica"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:fontFamily="@font/aclonica"
                android:text="Date"
                android:layout_weight="1"
                android:id="@+id/tv_date_detail_scheduling_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:textSize="12sp"
                android:fontFamily="@font/aclonica"
                android:text="time"
                android:layout_weight="1"
                android:id="@+id/tv_time_detail_scheduling_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>